<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BottomNavigationViewTextAppearance" parent="Widget.Design.BottomNavigationView">
        <item name="android:textSize">12sp</item> <!-- Размер текста можно изменить по своему усмотрению -->
    </style>


    <style name="BottomNavigationViewStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconSize">@dimen/bottom_navigation_icon_size</item>
        <item name="itemTextAppearanceActive">@style/BottomNavigationViewTextAppearance</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationViewTextAppearance</item>
        <item name="itemTextColor">@color/orange</item>
    </style>


    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="chipStrokeColor">@android:color/transparent</item>
    </style>

    <style name="ThinnerChip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipCornerRadius">12dp</item>
        <item name="chipMinHeight">24dp</item>
        <item name="android:textAppearance">@style/SmallerText</item>
    </style>

    <style name="SmallerText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">11sp</item>
    </style>

    <color name="chip_background_color">#DFDFDF</color>


    <style name="RoundedCornersDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@drawable/dialog_background</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>
</resources>