<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <!-- Кнопка предыдущей страницы -->
    <ImageButton
        android:id="@+id/btnPrevious"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.04"
        android:background="?attr/selectableItemBackground"
        android:src="@drawable/arrow_left_update" />

    <!-- Текущая страница и страницы вокруг -->
    <LinearLayout
        android:id="@+id/pageNumbersContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:gravity="center"
        android:orientation="horizontal">
        <!-- Динамически добавляемые TextView для номеров страниц -->
    </LinearLayout>

    <!-- Кнопка следующей страницы -->
    <ImageButton
        android:id="@+id/btnNext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.04"
        android:background="?attr/selectableItemBackground"
        android:src="@drawable/arrow_right_svgrepo_com" />

    <!-- Переход на определенную страницу -->
    <EditText
        android:id="@+id/etGoToPage"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_marginHorizontal="4dp"
        android:background="@drawable/button_background_input"
        android:gravity="center"
        android:hint="0"
        android:inputType="number" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnGoToPage"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/button_background_skip"
        android:textSize="18sp"
        android:text="»"
        android:textColor="@color/white"
        android:gravity="center"
        android:textAlignment="center" />

</LinearLayout>


