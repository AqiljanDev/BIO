<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    tools:context=".presentation.compare.CompareFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_compare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/roboto_condensed_medium"
            android:gravity="center"
            android:text="Сравнение"
            android:textColor="@color/black"
            android:textSize="28sp" />

        <View android:id="@+id/view_line_top_frame"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/background_line"
            android:layout_marginTop="10dp" />

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragment_container_compare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_compare_is_clear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:fontFamily="@font/roboto_condensed_medium"
            android:textSize="21sp"
            android:textColor="@color/black"
            android:text="Нет товаров" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>